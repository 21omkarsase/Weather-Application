<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/weather.webp" type="image/x-icon">
    <link rel="stylesheet" href="css/styles.css">
        {{!-- <link rel="stylesheet" href="../../public/css/styles.css"> --}}
    <title>Weather</title>
  </head>
  <body>
    {{>header}}
    <div class="container">
      <p class="about">Use this site to get your weather!</p>
      <form >
        <input class="inputText" type="text" name="city" placeholder="Enter a location" required>
        <button type="submit">Search</button>
      </form>
      <p class="loading">Loading...</p>
      <p class="location"></p>
      <p class="weatherInfo"></p>
      <p class="weatherOtherInfo"></p>
    </div>
    {{>footer}}
    <script src="/js/app.js"></script>
  </body>
